



<div class="container">
    <h1 style="text-align: center; margin: 50px 0;">All Publishments</h1>

  <%= render 'layouts/messages', notice: notice %>
    <table class="table table-striped table-hover">
        <thead> 
            <tr class="table-dark">
                <th>Title <button> ^ </button>  </th>
                <th>Relase Date   <button> ^ </button>  </th>
                <th>Author </th>
             
            </tr>
        </thead>
        <tbody>
           
            
            <% @books.each do |item| %>

                <tr>
                    <td> <%= item.name  %> </td>
                    <td><%= item.relase_date  %> </td>
                    <td><%= item.author.name  %> </td>


                </tr>
                
            <% end %>
    
            
        </tbody>
    
    </table>

    <div style="margin: 30px 0 ;">
     <%= link_to "Download", download_path  , class: "btn btn-primary" %>
     </div>
</div>