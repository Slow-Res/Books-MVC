
<div class="container" style="width: 60vh; padding:50px">

<h2>Log in</h2>
<br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>

  <%= render "authors/shared/error_messages", resource: resource %>
 

    <div class="mb-3">

    <%= form.label :email, "Emaill Address ", class: "form-label" %>
    <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>

  </div>


     <div class="mb-3">

    <%= form.label :password, "Password ", class: "form-label" %>
    <%= form.password_field :password, autofocus: true, autocomplete: "current-password", class: "form-control" %>

  </div>
 

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= form.check_box :remember_me  %>
      <%= form.label :remember_me , class: "form-label" %>
    </div>
  <% end %>

<div class="actions">
    <%= form.submit "Login", class: "btn btn-primary"  %>
</div>

<% end %>

<br>
<br>

<%= render "authors/shared/links" %>

</div>
